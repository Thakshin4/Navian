<!-- activity_tray_popup.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <Button
        android:id="@+id/observation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButton1Click"
        android:text="Add Observation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"        />

    <TextView
        android:id="@+id/description1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record your one-off sighting of a bird"
        android:layout_below="@+id/observation_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/session_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin Session"
        android:layout_below="@+id/description1"
        android:onClick="onButton2Click"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/session_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Start a birding session and log birds as you see them" />

</RelativeLayout>
